{
  "name": "onbeat",
  "version": "1.0.3",
  "description": "Delay functions using promises to return on a beat.",
  "main": "./build/index.js",
  "repository": "git@github.com:Ric-Lavers/onBeat.git",
  "author": "Ric-Lavers <ric_lavers@outlook.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "jest",
    "test:w": "jest -- --watch",
    "build": "babel src -d build",
    "prepare": "npm run build",
    "build:tsc": "tsc ./src/*.ts",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "jest": "^24.7.1",
    "nodemon": "^1.18.11",
    "typescript": "^3.4.5"
  }
}
